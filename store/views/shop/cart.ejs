<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

        <main>

            <% if(products.length > 0){ %>

                <ul>
                    <% products.forEach(productObject => { %>

                        <li><%= productObject.productData.title %> ( <%= productObject.qty %>)</li>
                        <form action="/delete-cart-product" method="POST">
                            <input type="hidden" name="productId" value="<%= productObject.productData.id %>" />
                            <button class="btn" type="submit">Delete</button>
                        </form>
                    <% });%>

                </ul>

            <% }else{%>

                <h1>Cart is empty...</h1>

            <% }%>


        </main>

        <%- include('../includes/end.ejs') %>